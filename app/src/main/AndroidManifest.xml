                <!-- Redirect URI: "kakao${NATIVE_APP_KEY}://oauth" -->
                <data
                    android:host="oauth"
                    android:scheme="kakaocab9f533e59332f0bbbf15b84459522c" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login.SignupActivity"
            android:exported="false" />
